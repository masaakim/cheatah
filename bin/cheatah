#!/usr/bin/env node

var fs = require('fs')
var pkg = require('../package.json')
var program = require('commander')
var Cheatah = require('../')

var argv = require('optimist')
    .alias('V', 'versions')
    .alias('h', 'help')
    .alias('t', 'template')
    .alias('s', 'stylesheet')
    .argv

var options = {}

if (argv.V) console.log(pkg.version)

if (argv.h) {
    console.log("Usage: cheatah [cssFilePath] [options]")
    console.log("")
    console.log("Options:")
    console.log("")
    console.log("  -h, --help          output usage information")
    console.log("  -V, --versions      output the version number")
    console.log("  -t, --template      import your template file (.ejs) path")
    console.log("  -s, --stylesheet    import your stylesheet path")
    console.log("")
}

if (argv.t) {
}

if (argv.s) {
}
